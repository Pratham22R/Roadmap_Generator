generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String             @id @default(cuid())
  name                String?
  email               String             @unique
  emailVerified       DateTime?
  image               String?
  role                UserRole           @default(USER)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  onboardingCompleted Boolean            @default(false)
  accounts            Account[]
  onboardingProfile   OnboardingProfile?
  progressLogs        ProgressLog[]
  roadmaps            Roadmap[]
  sessions            Session[]
  subscription        Subscription?
  emailLogs           EmailLog[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model OnboardingProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  careerGoal      String
  currentSkills   String[]
  experienceLevel String
  dailyTime       String
  targetDuration  String
  learningStyle   String?
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Roadmap {
  id          String        @id @default(cuid())
  userId      String
  templateId  String?       // Link to the shared template
  
  title       String        // Copied from template for easy display, or custom
  description String?
  status      RoadmapStatus @default(GENERATING)
  startDate   DateTime      @default(now())
  endDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  template    RoadmapTemplate? @relation(fields: [templateId], references: [id])
  
  // Legacy phases (kept for backward compatibility)
  // phases      Phase[] -> REMOVED
  
  // Progress tracking
  progress    SkillProgress[]
}

// REMOVED LEGACY MODELS: Phase, Skill, Resource

model ProgressLog {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  itemType  String
  action    String
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                  String    @id @default(cuid())
  userId              String    @unique
  polarSubscriptionId String?   @unique
  status              String    @default("FREE")
  currentPeriodEnd    DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PolarWebhookEvent {
  id        String   @id @default(cuid())
  type      String
  payload   Json
  processed Boolean  @default(false)
  createdAt DateTime @default(now())
}


// ... existing enums ...
enum UserRole {
  USER
  ADMIN
}

enum RoadmapStatus {
  GENERATING
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum SkillStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

// --- NEW MODELS FOR CACHING ---

model RoadmapTemplate {
  id          String   @id @default(cuid())
  inputsHash  String   @unique // The hash of normalized inputs
  title       String
  description String?
  createdAt   DateTime @default(now())
  
  phases      TemplatePhase[]
  roadmaps    Roadmap[] // Instances of this template
}

model TemplatePhase {
  id          String   @id @default(cuid())
  templateId  String
  title       String
  order       Int
  duration    String?
  
  template    RoadmapTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  skills      TemplateSkill[]
}

model TemplateSkill {
  id            String   @id @default(cuid())
  phaseId       String
  title         String
  description   String?
  estimatedTime String?
  
  phase         TemplatePhase @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  resources     TemplateResource[]
  progressRecords SkillProgress[]
}

model TemplateResource {
  id        String   @id @default(cuid())
  skillId   String
  title     String
  url       String
  thumbnail String?
  type      String   @default("VIDEO")
  
  skill     TemplateSkill @relation(fields: [skillId], references: [id], onDelete: Cascade)
}




model SkillProgress {
  id          String      @id @default(cuid())
  roadmapId   String
  skillId     String      // Points to TemplateSkill
  status      SkillStatus @default(PENDING)
  updatedAt   DateTime    @updatedAt
  
  roadmap     Roadmap       @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  skill       TemplateSkill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([roadmapId, skillId])
}

model EmailLog {
  id          String   @id @default(cuid())
  userId      String
  emailType   String
  status      String   // "QUEUED", "SENT", "FAILED"
  triggeredAt DateTime @default(now())
  sentAt      DateTime?
  errorMessage String?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}
