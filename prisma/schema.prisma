generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String             @id @default(cuid())
  name                String?
  email               String             @unique
  emailVerified       DateTime?
  image               String?
  role                UserRole           @default(USER)
  isBanned            Boolean            @default(false)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  onboardingCompleted Boolean            @default(false)
  resumeUploaded      Boolean            @default(false)
  resumeProcessed     Boolean            @default(false)
  accounts            Account[]
  onboardingProfile   OnboardingProfile?
  progressLogs        ProgressLog[]
  roadmaps            Roadmap[]
  sessions            Session[]
  subscription        Subscription?
  emailLogs           EmailLog[]
  resumes             Resume[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model OnboardingProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  careerGoal      String
  currentSkills   String[]
  experienceLevel String
  dailyTime       String
  targetDuration  String
  learningStyle   String?
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Roadmap {
  id          String        @id @default(cuid())
  userId      String
  templateId  String?       // Link to the shared template
  
  title       String        // Copied from template for easy display, or custom
  description String?
  status      RoadmapStatus @default(GENERATING)
  startDate   DateTime      @default(now())
  endDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  template    RoadmapTemplate? @relation(fields: [templateId], references: [id])
  
  // Progress tracking
  progress    SkillProgress[]
}


model ProgressLog {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  itemType  String
  action    String
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                  String    @id @default(cuid())
  userId              String    @unique
  polarSubscriptionId String?   @unique
  status              String    @default("FREE")
  currentPeriodEnd    DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PolarWebhookEvent {
  id        String   @id @default(cuid())
  type      String
  payload   Json
  processed Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum UserRole {
  USER
  ADMIN
}

enum RoadmapStatus {
  GENERATING
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum SkillStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model RoadmapTemplate {
  id            String   @id @default(cuid())
  inputsHash    String   @unique // The hash of normalized inputs
  title         String
  description   String?
  missingSkills Json?
  createdAt     DateTime @default(now())
  
  phases        TemplatePhase[]
  roadmaps      Roadmap[] // Instances of this template
}

model TemplatePhase {
  id          String   @id @default(cuid())
  templateId  String
  title       String
  order       Int
  duration    String?
  
  template    RoadmapTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  skills      TemplateSkill[]
}

model TemplateSkill {
  id            String   @id @default(cuid())
  phaseId       String
  title         String
  description   String?
  estimatedTime String?
  
  phase         TemplatePhase @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  resources     TemplateResource[]
  progressRecords SkillProgress[]
}

model TemplateResource {
  id        String   @id @default(cuid())
  skillId   String
  title     String
  url       String
  thumbnail String?
  type      String   @default("VIDEO")
  
  skill     TemplateSkill @relation(fields: [skillId], references: [id], onDelete: Cascade)
}

model SkillProgress {
  id          String      @id @default(cuid())
  roadmapId   String
  skillId     String      // Points to TemplateSkill
  status      SkillStatus @default(PENDING)
  updatedAt   DateTime    @updatedAt
  
  roadmap     Roadmap       @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  skill       TemplateSkill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([roadmapId, skillId])
}

model EmailLog {
  id          String   @id @default(cuid())
  userId      String
  emailType   String
  status      String   // "QUEUED", "SENT", "FAILED"
  triggeredAt DateTime @default(now())
  sentAt      DateTime?
  errorMessage String?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model CareerRole {
  id          String   @id @default(cuid())
  title       String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  skills      RoleSkill[]
}

model RoleSkill {
  id        String     @id @default(cuid())
  roleId    String
  skillId   String
  category  String?    @default("Core")
  isDefault Boolean    @default(true)
  
  role      CareerRole @relation(fields: [roleId], references: [id], onDelete: Cascade)
  skill     Skill      @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([roleId, skillId])
  @@index([roleId])
  @@index([skillId])
}

model Skill {
  id            String      @id @default(cuid())
  title         String      @unique
  // Removed roleId, category, isDefault specific to a single role
  
  roles         RoleSkill[]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model GlobalSettings {
  key         String   @id
  value       String   @db.Text
  description String?
  updatedAt   DateTime @updatedAt
}

model YouTubeChannel {
  id        String   @id @default(cuid())
  channelId String   @unique // The YouTube Channel ID (e.g. UC...)
  title     String?
  type      String   @default("WHITELIST") // "WHITELIST" or "BLACKLIST"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "welcome", "roadmap", "milestone"
  subject     String?
  content     String   @db.Text // HTML content with {{placeholders}}
  description String?
  isActive    Boolean  @default(true)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Resume {
  id               String   @id @default(cuid())
  userId           String
  rawText          String   @db.Text
  extractedSkills  Json
  normalizedSkills Json
  createdAt        DateTime @default(now())
  
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
